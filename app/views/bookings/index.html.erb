<div class="card-container">
    <% @booking.each do |book| %>
      <div class="card">
        <h2 class ="dog-name"> <%= book.dog.name %></h2>
        <% if book.dog.photo.attached?  %>
          <%= cl_image_tag book.dog.photo.key, class: "photo" %>
        <%else %>
          <img class="photo" src="<%= book.dog.picture %>" alt="">
        <% end %>
        <p>Start-date: <%= book.start_date %></p>
        <p>End-date: <%= book.end_date %></p>
        <h3 class="dog-price"><%= book.dog.price %>â‚¬/day</h3>
      </div>
  <% end %>
</div>
