<%= simple_form_for(@dog) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :photo, as: :file %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Show Dogs', dogs_path(@dogs), :class => "btn btn-primary" %>
